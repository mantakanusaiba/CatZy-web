@model Catzy.Models.Product
@{
    ViewData["Title"] = "Product Details - " + Model.Name;
}
<div class="details-container">
    <div class="details-card">
        <div class="image-container">
            <img src="~/Content/image/@Model.Icon" alt="@Model.Name" class="product-image" />
        </div>
        <div class="details-info">
            <div class="product-category">Premium Product</div>
            <h2>@Model.Name</h2>
            <div class="rating">
                <span>★★★★★</span>
                <span class="review-count">(24 reviews)</span>
            </div>
            <p class="description">@Model.Description</p>
            <div class="price-stock-container">
                <p class="price">Tk @Model.Price</p>
                <p class="stock @(Model.Stock > 0 ? "in-stock" : "out-stock")">
                    <i class="stock-icon @(Model.Stock > 0 ? "in-stock" : "out-stock")"></i>
                    @(Model.Stock > 0 ? $"In Stock: {Model.Stock}" : "Out of Stock")
                </p>
            </div>
            @using (Html.BeginForm("AddToCart", "Shop", FormMethod.Post))
            {
                @Html.Hidden("productId", Model.Id)
                <div class="quantity-section">
                    <label for="quantity">Quantity:</label>
                    <div class="quantity-controls">
                        <button type="button" class="qty-btn minus">-</button>
                        <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="qty-input" />
                        <button type="button" class="qty-btn plus">+</button>
                    </div>
                </div>
                <button type="submit" class="btn @(Model.Stock > 0 ? "" : "disabled")" @(Model.Stock > 0 ? "" : "disabled")>
                    <i class="cart-icon"></i> Add to Cart
                </button>
            }
            <div class="additional-info">
                <div class="info-item">
                    <i class="info-icon shipping"></i>
                    <span>Free shipping on orders over ৳1000</span>
                </div>
                <div class="info-item">
                    <i class="info-icon return"></i>
                    <span>30-day return policy</span>
                </div>
            </div>
            <a href="@Url.Action("Index","Shop")" class="back-btn">
                <i class="back-icon"></i> Back to Shop
            </a>
        </div>
    </div>
</div>
<style>
    /* Base styles */
    .details-container {
        padding: 40px 20px;
        display: flex;
        justify-content: center;
        background-color: #f9f6f0;
        min-height: calc(100vh - 100px);
    }
    .details-card {
        display: flex;
        background: #ffffff;
        padding: 30px;
        border-radius: 20px;
        width: 100%;
        max-width: 900px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }
    .details-card:hover {
        transform: translateY(-5px);
    }
    /* Image section */
    .image-container {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        margin-right: 30px; /* Changed back to margin-right */
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        width: 300px;
        height: 300px;
        flex-shrink: 0;
    }
    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.5s ease;
    }
    .image-container:hover .product-image {
        transform: scale(1.05);
    }
    /* Product info section */
    .details-info {
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    .product-category {
        font-size: 14px;
        color: #e5c185;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        font-weight: 600;
    }
    .details-info h2 {
        font-size: 32px;
        color: #6b4b2e;
        margin-bottom: 10px;
        font-weight: 700;
    }
    /* Rating */
    .rating {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }
    .rating span:first-child {
        color: #ffd700;
        letter-spacing: 2px;
    }
    .review-count {
        color: #8a5e3c;
        font-size: 14px;
        margin-left: 8px;
    }
    /* Description */
    .description {
        color: #8a5e3c;
        margin-bottom: 20px;
        line-height: 1.6;
    }
    /* Price and stock */
    .price-stock-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }
    .price {
        font-size: 26px;
        font-weight: bold;
        color: #6b4b2e;
    }
    .stock {
        font-size: 15px;
        padding: 5px 10px;
        border-radius: 20px;
        display: flex;
        align-items: center;
    }
    .stock.in-stock {
        color: #4caf50;
        background-color: rgba(76, 175, 80, 0.1);
    }
    .stock.out-stock {
        color: #f44336;
        background-color: rgba(244, 67, 54, 0.1);
    }
    .stock-icon {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 5px;
        display: inline-block;
    }
    .stock-icon.in-stock {
        background-color: #4caf50;
    }
    .stock-icon.out-stock {
        background-color: #f44336;
    }
    /* Quantity section */
    .quantity-section {
        margin-bottom: 20px;
    }
    .quantity-section label {
        display: block;
        margin-bottom: 8px;
        color: #6b4b2e;
        font-weight: 500;
    }
    .quantity-controls {
        display: flex;
        align-items: center;
    }
    .qty-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 1px solid #e5c185;
        background-color: #fff;
        color: #6b4b2e;
        font-size: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .qty-btn:hover {
        background-color: #e5c185;
    }
    .qty-input {
        width: 60px;
        height: 36px;
        text-align: center;
        border: 1px solid #e5c185;
        border-radius: 0;
        margin: 0 5px;
        font-size: 16px;
    }
    /* Buttons */
    .btn {
        background-color: #e5c185;
        border: none;
        padding: 12px 25px;
        border-radius: 30px;
        color: #6b4b2e;
        font-weight: bold;
        cursor: pointer;
        margin-right: 15px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        box-shadow: 0 4px 8px rgba(229, 193, 133, 0.3);
        width: fit-content;
    }
    .btn:hover:not(.disabled) {
        background-color: #d4aa6a;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(229, 193, 133, 0.4);
    }
    .btn.disabled {
        background-color: #cccccc;
        cursor: not-allowed;
        box-shadow: none;
    }
    .cart-icon {
        display: inline-block;
        width: 18px;
        height: 18px;
        margin-right: 8px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%236b4b2e"><path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/></svg>');
        background-repeat: no-repeat;
        background-position: center;
    }
    /* Additional info */
    .additional-info {
        margin: 20px 0;
        border-top: 1px solid #f0e6d2;
        padding-top: 20px;
    }
    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        color: #8a5e3c;
        font-size: 14px;
    }
    .info-icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        display: inline-block;
    }
    .info-icon.shipping {
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23e5c185"><path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/></svg>');
        background-repeat: no-repeat;
        background-position: center;
    }
    .info-icon.return {
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23e5c185"><path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/></svg>');
        background-repeat: no-repeat;
        background-position: center;
    }
    /* Back button */
    .back-btn {
        text-decoration: none;
        background-color: transparent;
        border: 1px solid #e5c185;
        padding: 10px 20px;
        border-radius: 30px;
        color: #6b4b2e;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        align-self: flex-start;
        width: fit-content;
    }
    .back-btn:hover {
        background-color: #fff1c1;
        transform: translateY(-2px);
    }
    .back-icon {
        display: inline-block;
        width: 16px;
        height: 16px;
        margin-right: 5px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%236b4b2e"><path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/></svg>');
        background-repeat: no-repeat;
        background-position: center;
    }

    (max-width: 768px) {
        .details-card {
            flex-direction: column;
            padding: 20px;
        }
        .image-container {
            width: 250px;
            height: 250px;
            margin: 0 auto 20px; /* Changed back to original margin for mobile */
        }
        .product-image {
            width: 100%;
            height: 100%;
        }
        .details-info h2 {
            font-size: 28px;
        }
        .price-stock-container {
            flex-direction: column;
            align-items: flex-start;
        }
        .stock {
            margin-top: 10px;
        }
    }
</style>
<script>
    // Quantity controls functionality
    document.addEventListener('DOMContentLoaded', function () {
        const minusBtn = document.querySelector('.qty-btn.minus');
        const plusBtn = document.querySelector('.qty-btn.plus');
        const qtyInput = document.querySelector('.qty-input');
        const maxStock = parseInt(qtyInput.getAttribute('max'));
        minusBtn.addEventListener('click', function () {
            let currentValue = parseInt(qtyInput.value);
            if (currentValue > 1) {
                qtyInput.value = currentValue - 1;
            }
        });
        plusBtn.addEventListener('click', function () {
            let currentValue = parseInt(qtyInput.value);
            if (currentValue < maxStock) {
                qtyInput.value = currentValue + 1;
            }
        });
    });
</script>