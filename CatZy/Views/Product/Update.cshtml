@model Catzy.Models.Product
@{
    ViewBag.Title = "Catzy - Update Product";
}


<nav class="navbar">
    <div class="logo">CatZy</div>
    <ul class="nav-links">
        <li><a href="#" class="active">Product Management</a></li>
        <li><a href="#">Adoption Listing</a></li>
        <li><a href="#">Doctor Approval</a></li>
        <li><a href="@Url.Action("Index", "Product")" class="btn-back">Back</a></li>
    </ul>
</nav>


<div class="admin-container">


    <aside class="sidebar">
        <ul>
            <li><a href="@Url.Action("Index", "Product")">üìÇ All Products</a></li>
            <li><a href="@Url.Action("Add", "Product")">‚ûï Add Product</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Pet Food" })">ü•© Pet Food</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Toys" })">üß∏ Toys</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Health Care" })">‚ù§Ô∏è Health Care</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Accessories" })">‚≠ê Accessories</a></li>
        </ul>
    </aside>


    <main class="content">
        <h1>Update Product</h1>
        <p>Modify the details below to update this product.</p>

        @using (Html.BeginForm())

        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Product Name")
                    @Html.TextBoxFor(m => m.Name, new { @class = "input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Price, "Price (Tk)")
                    @Html.TextBoxFor(m => m.Price, new { @class = "input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Category, "Category")
                    @Html.TextBoxFor(m => m.Category, new { @class = "input" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Stock, "Stock Quantity")
                    @Html.TextBoxFor(m => m.Stock, new { @class = "input" })
                </div>

                <div class="form-group full-width">
                    @Html.LabelFor(m => m.Description, "Description")
                    @Html.TextAreaFor(m => m.Description, new { @class = "textarea" })
                </div>

                <div class="form-group full-width">
                    @Html.LabelFor(m => m.Icon, "Icon")
                    @Html.TextBoxFor(m => m.Icon, new { @class = "input" })
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">‚úèÔ∏è Update Product</button>
            </div>
        }
    </main>
</div>

