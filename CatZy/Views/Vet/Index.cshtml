@{
    ViewData["Title"] = "Catzy - Doctor Dashboard";
}


<nav class="navbar">
    <div class="logo">Catzy</div>
    <ul class="nav-links">
        <li><a href="/Vet/Index">Dashboard</a></li>
        <li><a href="/Vet/Credentials">Credentials Form</a></li>
        
        <li><a href="/Vet/Appointment">Appointments</a></li>
        
        <li><a href="#">Patients</a></li>
        <li><a href="#">Medical Records</a></li>
        <li><a href="#">Messages</a></li>
        <li><a href="/Account/Logout">Logout</a></li>
    </ul>

</nav>

<div class="main-section">
    <div class="content">
        <h1>
            Welcome Doctor, @ViewBag.User üë©‚Äç‚öïÔ∏è
        </h1>
        <p>
            Manage your appointments, patient history, and provide medical care through Catzy.
            Stay connected with your patients anytime.
        </p>
        <div class="buttons">
            <a href="#" class="btn">View Appointments</a>
            <a href="#" class="btn">Manage Patients</a>
        </div>
    </div>
    <div class="image">
        <img src="~/Content/image/doctor.png" alt="Doctor Dashboard" />
    </div>
</div>


<section class="services-section">
    <h2>Doctor Tools</h2>
    <div class="services-container">
        <div class="service-card">
            <img src="~/Content/image/appointment.png" alt="Appointments" />
            <p>Appointments</p>
        </div>
        <div class="service-card">
            <img src="~/Content/image/patients.png" alt="Patients" />
            <p>Patients</p>
        </div>
        <div class="service-card">
            <img src="~/Content/image/records.png" alt="Medical Records" />
            <p>Medical Records</p>
        </div>
        <div class="service-card">
            <img src="~/Content/image/message.png" alt="Messages" />
            <p>Messages</p>
        </div>
    </div>
</section>


<section class="rescue-section">
    <div class="rescue-container">
        <div class="rescue-info">
            <span class="tag">Reports</span>
            <h3>Patient & Treatment Reports</h3>
            <p>
                Generate medical reports, update prescriptions, and track patient progress.
                Keep all important medical records in one place.
            </p>
            <a href="#" class="browse-btn">Generate Report ‚Üí</a>
        </div>
        <div class="rescue-grid">
            <div class="rescue-card">
                <img src="~/Content/image/records.png" alt="History" />
                <p>History</p>
            </div>
            <div class="rescue-card">
                <img src="~/Content/image/health.png" alt="Prescriptions" />
                <p>Prescriptions</p>
            </div>
            <div class="rescue-card">
                <img src="~/Content/image/care.png" alt="Treatment" />
                <p>Treatment</p>
            </div>
            <div class="rescue-card">
                <img src="~/Content/image/message.png" alt="Notes" />
                <p>Notes</p>
            </div>
        </div>
    </div>
</section>

