@{
    ViewData["Title"] = "Catzy - Doctor Dashboard";
}


<nav class="navbar">
    <div class="logo">Catzy</div>
    <ul class="nav-links">
        <li><a href="/Vet/Index">Dashboard</a></li>
        <li><a href="/Vet/Appointment">Appointments</a></li>
        <li><a href="#">Messages</a></li>
        <li><a href="/Account/Logout">Logout</a></li>
    </ul>
</nav>


<div class="main-section">
    <div class="content">
        <h1>
            Welcome Doctor, @ViewBag.User üë©‚Äç‚öïÔ∏è
        </h1>
        <p>
            Manage your appointments, patient history, and provide medical care through Catzy.
            Stay connected with your patients anytime.
        </p>
        <div class="buttons">
            <a href="/Vet/Appointment" class="btn">View Appointments</a>
            <a href="#" class="btn">Manage Patients</a>
        </div>
    </div>
    <div class="image">
        <img src="~/Content/image/doctor.png" alt="Doctor Dashboard" />
    </div>
</div>


<section class="services-section">
    <h2>Doctor Tools</h2>
    <div class="services-container">
        <div class="service-card">
            <img src="https://cdn-icons-png.flaticon.com/512/3209/3209265.png" alt="Appointments" />
            <p>Appointments</p>
        </div>
        <div class="rescue-card">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Patients" />
            <p>Patients</p>
        </div>

        <div class="service-card">
            <img src="https://cdn-icons-png.flaticon.com/512/3209/3209267.png" alt="Medical Records" />
            <p>Medical Records</p>
        </div>
        <div class="service-card">
            <img src="https://cdn-icons-png.flaticon.com/512/2462/2462719.png" alt="Messages" />
            <p>Messages</p>
        </div>
    </div>
    
</section>




<section class="rescue-section">
    <div class="rescue-container">
        <div class="rescue-info">
            <span class="tag">Reports</span>
            <h3>Patient & Treatment Reports</h3>
            <p>
                Generate medical reports, update prescriptions, and track patient progress.
                Keep all important medical records in one place.
            </p>
            <a href="#" class="browse-btn">Generate Report ‚Üí</a>
        </div>
        <div class="rescue-grid">
            <div class="rescue-card">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="History" />
                <p>History</p>
            </div>
            <div class="rescue-card">
                <img src="https://cdn-icons-png.flaticon.com/512/3209/3209283.png" alt="Prescriptions" />
                <p>Prescriptions</p>
            </div>
            <div class="rescue-card">
                <img src="https://cdn-icons-png.flaticon.com/512/2921/2921820.png" alt="Treatment" />



                <p>Treatment</p>
            </div>
            <div class="rescue-card">
                <img src="https://cdn-icons-png.flaticon.com/512/1828/1828911.png" alt="Notes" />
                <p>Notes</p>
            </div>
        </div>
    </div>
</section>



<style>
    body {
        background-color: #ffd699;
        font-family: 'Comic Sans MS', cursive, sans-serif;
        margin: 0;
        color: #4a2f1b;
    }

   
    .navbar {
        background-color: #644426;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 40px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        box-shadow: 0px 3px 8px rgba(0,0,0,0.2);
    }

        .navbar .logo {
            font-size: 28px;
            color: white;
            font-weight: bold;
        }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 25px;
    }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }

            .nav-links a:hover {
                color: #ffd699;
            }

    
    .main-section {
        margin-top: 100px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 60px;
        background-color: #ffe4b3;
        border-radius: 10px;
        margin: 40px;
        box-shadow: 0px 5px 15px rgba(0,0,0,0.1);
    }

        .main-section .content h1 {
            font-size: 34px;
            color: #6b4b2e;
            margin-bottom: 20px;
        }

        .main-section .content p {
            font-size: 16px;
            color: #8a5e3c;
            margin-bottom: 40px;
        }

        .main-section .buttons .btn {
            background-color: #fff1c1;
            padding: 12px 22px;
            margin-right: 12px;
            border-radius: 25px;
            text-decoration: none;
            color: #6b4b2e;
            font-weight: bold;
            transition: 0.3s;
            box-shadow: 0px 3px 6px rgba(0,0,0,0.1);
        }

            .main-section .buttons .btn:hover {
                background-color: #e5c185;
            }

        .main-section img {
            width: 320px;
            border-radius: 10px;
        }

   
    .services-section {
        text-align: center;
        padding: 70px 50px;
    }

        .services-section h2 {
            font-size: 30px;
            margin-bottom: 30px;
            color: #6b4b2e;
        }

    .services-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
    }

    .service-card {
        background-color: #fff1c1;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-card img {
            width: 55px;
            height: 55px;
        }

        .service-card p {
            margin-top: 12px;
            font-weight: bold;
            color: #6b4b2e;
        }

    
    .rescue-section {
        padding: 70px 50px;
    }

    .rescue-container {
        background-color: #e5c185;
        border-radius: 12px;
        padding: 50px;
        display: flex;
        justify-content: space-between;
        gap: 30px;
        box-shadow: 0px 5px 15px rgba(0,0,0,0.1);
    }

    .rescue-info {
        flex: 1;
        text-align: left;
    }

        .rescue-info .tag {
            display: inline-block;
            background-color: #fff1c1;
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: bold;
            color: #6b4b2e;
        }

        .rescue-info h3 {
            font-size: 26px;
            margin: 15px 0;
            color: #6b4b2e;
        }

        .rescue-info p {
            font-size: 16px;
            color: #8a5e3c;
            margin-bottom: 20px;
        }

    .browse-btn {
        background-color: #fff1c1;
        padding: 10px 18px;
        border-radius: 25px;
        color: #6b4b2e;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .browse-btn:hover {
            background-color: #ffe4b3;
        }

    .rescue-grid {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .rescue-card {
        background-color: #fff1c1;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }

        .rescue-card:hover {
            transform: translateY(-5px);
        }

        .rescue-card img {
            width: 50px;
            height: 50px;
            margin-bottom: 12px;
        }

        .rescue-card p {
            font-weight: bold;
            color: #6b4b2e;
        }
</style>
