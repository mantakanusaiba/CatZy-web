@model IEnumerable<Catzy.Models.Appointment>

@{
    ViewBag.Title = "Appointment List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Comic Sans MS', cursive;
            background-color: #ffcc99;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #5b3c1d;
            color: #fff3d4;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .logo {
                font-size: 22px;
                font-weight: bold;
            }

            .header h2 {
                margin: 0;
                flex: 1;
                text-align: center;
                font-size: 20px;
            }

            .header .back-btn {
                background: #fff3d4;
                color: #5b3c1d;
                border: none;
                border-radius: 20px;
                padding: 6px 15px;
                cursor: pointer;
            }

        .container {
            padding: 20px;
        }

        h3 {
            color: #5b3c1d;
            margin-bottom: 5px;
        }

        p.subtitle {
            color: #7a4a2e;
            margin-bottom: 25px;
        }

        .card {
            background: #fff6cc;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
        }

            .card p {
                color: #333;
                margin: 6px 0;
                font-size: 15px;
            }

            .card strong {
                color: #5b3c1d;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="logo">Catzy</div>
        <h2>Appointment List</h2>
        <button class="back-btn" onclick="window.history.back()">Back</button>
    </div>

    <div class="container">
        <h3>My Appointment</h3>
        <p class="subtitle">View and manage appointments booked by cat owners</p>

        @foreach (var item in Model)
        {
            <div class="card">
                <p><strong>Owner name :</strong> @item.OwnerName</p>
                <p><strong>Email :</strong> @item.Email</p>
                <p><strong>Cat name :</strong> @item.CatName</p>
                <p><strong>Appointment Date :</strong> @item.Date.ToString("MMM d, yyyy")</p>
                <p><strong>Time Slot :</strong> @item.FromTime â€“ @item.ToTime</p>
                <p><strong>Specialization :</strong> @item.Specialization</p>
            </div>
        }
    </div>
</body>
</html>
