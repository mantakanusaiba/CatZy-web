@model IEnumerable<Catzy.Models.Product>
@{
    ViewBag.Title = "Catzy - Product Management";
}

<nav class="navbar">
    <div class="logo">CatZy</div>
    <ul class="nav-links">
        <li><a href="#" class="active">Product Management</a></li>
        <li> <a href="@Url.Action("Index", "Admin")" class="btn-back">Back</a></a></li>
    </ul>
</nav>


<div class="admin-container">

    <aside class="sidebar">
        <ul>
            <li><a href="@Url.Action("Index", "Product")" class="@(ViewBag.SelectedCategory == null ? "active" : "")">üìÇ All Products</a></li>
            <li><a href="@Url.Action("Add", "Product")">‚ûï Add Product</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Pet Food" })" class="@(ViewBag.SelectedCategory == "Pet Food" ? "active" : "")">ü•© Pet Food</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Toys" })" class="@(ViewBag.SelectedCategory == "Toys" ? "active" : "")">üß∏ Toys</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Health Care" })" class="@(ViewBag.SelectedCategory == "Health Care" ? "active" : "")">‚ù§Ô∏è Health Care</a></li>
            <li><a href="@Url.Action("Category", "Product", new { category = "Accessories" })" class="@(ViewBag.SelectedCategory == "Accessories" ? "active" : "")">‚≠ê Accessories</a></li>
        </ul>
    </aside>


    <main class="content">
        <h1>@(ViewBag.SelectedCategory ?? "All Products")</h1>

        <p>Showing @Model.Count() products</p>



        <div class="product-grid">
            @foreach (var item in Model)
            {
                <div class="product-card">
                    <div class="stock">Stock: @item.Stock</div>
                    <img src="~/Content/image/@item.Icon" alt="@item.Name" />
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <h4>Tk @item.Price</h4>
                    <div class="card-buttons">
                        <a href="@Url.Action("Update", "Product", new { id = item.Id })" class="btn">Update</a>

                        @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @class = "inline-form", onsubmit = "return confirm('Are you sure you want to delete @item.Name?');" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id)
                            <button type="submit" class="btn">Delete</button>
                        }
                    </div>


                </div>
            }
        </div>
    </main>
</div>

