@{
    ViewBag.Title = "Adoption Confirmation";
}
<div class="confirm-wrap">
    <div class="confirm-card">
        <h2>Request received</h2>
        <p>@ViewBag.Message</p>
        <a class="btn" href="@Url.Action("Adoption","User")">Back to Adoption</a>
    </div>
</div>
<style>
    .confirm-wrap {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff3e0
    }

    .confirm-card {
        max-width: 560px;
        background: #fff;
        border-radius: 12px;
        border: 1px solid #f0d7aa;
        padding: 24px
    }

    .btn {
        display: inline-block;
        background: #d8a55b;
        color: #fff;
        padding: 10px 16px;
        border-radius: 20px;
        text-decoration: none
    }

        .btn:hover {
            background: #b8853f
        }
</style>
