@model Catzy.Models.User
@{
    ViewBag.Title = "Signup - Catzy";
}
<div class="auth-wrap">
    <div class="login-card glass">
        <div class="login-brand">
            <div class="brand-icon">üêæ</div>
            <h2>Create your Catzy account</h2>
            <p>Join the community and care for furry friends</p>
        </div>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form", autocomplete = "on" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group floating">
                <div class="input-icon">
                    <span class="icon">üë§</span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = " ", required = "required", aria_label = "Username", autocomplete = "username" })
                    <label class="form-label" for="Username">Username</label>
                </div>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group floating">
                <div class="input-icon">
                    <span class="icon">@@</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = " ", type = "email", required = "required", aria_label = "Email", autocomplete = "email" })
                    <label class="form-label" for="Email">Email</label>
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group floating">
                <div class="input-icon">
                    <span class="icon">üîí</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = " ", required = "required", aria_label = "Password", autocomplete = "new-password" })
                    <label class="form-label" for="Password">Password</label>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group select-group">
                <label class="select-label" for="Role">Role</label>
                @Html.DropDownListFor(
                    m => m.Role,
                    new SelectList(new[] { "User", "Vet", "Admin" }),
                    new { @class = "form-control select", aria_label = "Role" }
                )
                @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <button type="submit" class="login-btn">Sign Up</button>
            </div>
        }

        <div class="login-footer">
            <p class="message">@ViewBag.Message</p>
            <p class="signup-prompt">
                Already have an account?
                @Html.ActionLink("Log in here", "Login", "Account", null, new { @class = "signup-link" })
            </p>
        </div>
    </div>
</div>

<style>
    :root {
        --bg1: #ffd699;
        --bg2: #ffecd2;
        --card: rgba(255,241,193,.78);
        --stroke: rgba(255,255,255,.45);
        --brand: #644426;
        --brand-2: #4e341a;
        --text: #5b4636;
        --muted: #8a5e3c;
        --accent: #e5c185;
        --focus: rgba(100,68,38,.18);
    }

    * {
        box-sizing: border-box
    }

    html, body {
        height: 100%
    }

    body {
        margin: 0;
        background: radial-gradient(1200px 800px at 10% 10%, var(--bg2), transparent 60%), radial-gradient(1200px 800px at 90% 90%, #ffe4b3, transparent 55%), linear-gradient(135deg, var(--bg1), #ffdfae);
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text);
        /* Center the container horizontally and vertically */
        display: flex;
        align-items: center; /* vertical center */ /* MDN flex alignment */
        justify-content: center; /* horizontal center */ /* MDN flex alignment */
        padding: 32px;
    }
    /* [1][2] */

    .auth-wrap {
        width: 100%;
        max-width: none;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center; /* ensure inner content also centered */
        gap: 4vw;
    }

    .login-card {
        width: 460px;
        min-width: 320px;
        padding: 32px 28px;
        border-radius: 20px;
        background: var(--card);
        border: 1px solid var(--stroke);
        box-shadow: 0 20px 60px rgba(100,68,38,.18), inset 0 1px 0 rgba(255,255,255,.4);
    }

    .login-brand {
        text-align: center;
        margin-bottom: 22px;
    }

    .brand-icon {
        width: 56px;
        height: 56px;
        line-height: 56px;
        text-align: center;
        font-size: 26px;
        background: #fff7e6;
        border-radius: 14px;
        margin: 0 auto 12px;
        box-shadow: inset 0 1px 0 #fff, 0 6px 16px rgba(0,0,0,.06);
    }

    .login-brand h2 {
        margin: 0 0 6px;
        color: var(--brand);
        font-size: 26px;
        font-weight: 800;
    }

    .login-brand p {
        margin: 0;
        color: var(--muted);
        font-size: 14.5px;
    }

    .login-form {
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 18px;
    }

    .input-icon {
        position: relative;
    }

        .input-icon .icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #9a7a5c;
            font-size: 14px;
        }

    .form-control {
        width: 100%;
        padding: 14px 14px 14px 38px;
        border-radius: 12px;
        border: 2px solid var(--accent);
        background: #fff;
        color: var(--brand);
        font-size: 15.5px;
    }

        .form-control:focus {
            outline: 0;
            border-color: var(--brand);
            box-shadow: 0 0 0 6px var(--focus), inset 0 1px 0 rgba(255,255,255,.6);
        }

    .floating {
        position: relative;
    }

        .floating .form-label {
            position: absolute;
            left: 38px;
            top: 12px;
            color: #a08060;
            font-size: 14px;
            padding: 0 6px;
            pointer-events: none;
            background: transparent;
        }

    .input-icon .form-control:focus ~ .form-label,
    .input-icon .form-control:not(:placeholder-shown) ~ .form-label {
        transform: translateY(-22px) scale(.90);
        top: 0;
        color: var(--brand);
        background: linear-gradient(180deg, transparent 40%, rgba(255,255,255,.92) 41% 100%);
        padding: 0 6px;
        border-radius: 6px;
    }

    .select-group {
        margin-top: 6px;
    }

    .select-label {
        display: block;
        margin: 4px 0 8px;
        color: #a08060;
        font-weight: 600;
        font-size: 14px;
    }

    .select {
        padding: 12px 14px;
        border-radius: 12px;
        border: 2px solid var(--accent);
        background: #fff;
        color: var(--brand);
        font-size: 15.5px;
    }

        .select:focus {
            outline: 0;
            border-color: var(--brand);
            box-shadow: 0 0 0 6px var(--focus);
        }

    .text-danger {
        color: #d9534f;
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }

    .form-actions {
        margin-top: 12px;
    }

    .login-btn {
        width: 100%;
        padding: 14px 16px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--brand), var(--brand-2));
        color: #fff;
        font-weight: 700;
        font-size: 16px;
    }

    .login-footer {
        margin-top: 18px;
        text-align: center;
    }

    .message {
        min-height: 20px;
        color: #d9534f;
        font-size: 14px;
        margin: 6px 0 6px;
    }

    .signup-prompt {
        color: var(--text);
        font-size: 14.5px;
    }

    .signup-link {
        color: var(--brand);
        font-weight: 700;
        text-decoration: none;
        margin-left: 4px;
    }

    /* Small screens: keep centered */
    @@media (max-width: 992px) {
        body {
            justify-content: center;
        }
    }
</style>
