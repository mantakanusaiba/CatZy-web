@model Catzy.Models.User

<div class="auth-wrap">
    <div class="bg-shape"></div>

    <div class="login-card glass">
        <div class="login-brand">
            <div class="brand-icon">🐾</div>
            <h2>Welcome to Catzy</h2>
            <p>Sign in to continue caring for your furry friends</p>
        </div>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form" }))
        {
            <div class="form-group floating">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                <div class="input-icon">
                    <span class="icon">@@</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = " " })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group floating">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                <div class="input-icon">
                    <span class="icon">🔒</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = " " })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <button type="submit" class="login-btn">Login</button>
            </div>
        }

        <div class="login-footer">
            <p class="message">@ViewBag.Message</p>
            <p class="signup-prompt">
                Don’t have an account?
                @Html.ActionLink("Sign up here", "Signup", "Account", null, new { @class = "signup-link" })
            </p>
        </div>
    </div>
</div>

<style>
/* Theme tokens */
:root{
    --bg1:#ffd699; --bg2:#ffecd2; --card:rgba(255,241,193,.75);
    --stroke:rgba(255,255,255,.45); --brand:#644426; --brand-2:#4e341a;
    --text:#5b4636; --muted:#8a5e3c; --accent:#e5c185; --focus:rgba(100,68,38,.18);
}

/* Layout background */
*{box-sizing:border-box}
html,body{height:100%}
body{
    margin:0;
    background:
      radial-gradient(1200px 800px at 10% 10%, var(--bg2), transparent 60%),
      radial-gradient(1200px 800px at 90% 90%, #ffe4b3, transparent 55%),
      linear-gradient(135deg, var(--bg1), #ffdfae);
    font-family:"Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color:var(--text);

    /* Center the container on both axes */
    display:flex;
    align-items:center;          /* vertical center */  /* MDN flex alignment */
    justify-content:center;      /* horizontal center */
    padding:32px;
} /* [6][9] */

/* Decorative blobs */
.bg-shape{ position:fixed; inset:0; pointer-events:none; }
.bg-shape::before{
    content:""; position:absolute; width:600px; height:600px; filter:blur(80px);
    background: conic-gradient(from 45deg,#ffd39a,#ffe5bf,#ffc879,#ffd39a);
    border-radius:50%; top:-140px; right:-120px; opacity:.35;
}
.bg-shape::after{
    content:""; position:absolute; width:520px; height:520px; filter:blur(80px);
    background: radial-gradient(circle at 30% 30%, #fff3e0 0 40%, transparent 60%);
    border-radius:50%; bottom:-120px; left:-100px; opacity:.5;
}

/* Wrapper centered by body flex; no narrow max-width needed */
.auth-wrap{
    width:100%;
    max-width:none;              /* allow natural centering */
    position:relative;
    display:flex;
    align-items:center;
    justify-content:center;
}

/* Card */
.login-card{
    position:relative;
    width: 440px;
    padding:32px 28px;
    border-radius:20px;
    backdrop-filter: blur(12px) saturate(120%);
    background: var(--card);
    border:1px solid var(--stroke);
    box-shadow: 0 20px 60px rgba(100,68,38,.18), inset 0 1px 0 rgba(255,255,255,.4);
    transition: transform .3s ease, box-shadow .3s ease;
}
.login-card:hover{
    transform: translateY(-2px);
    box-shadow: 0 26px 70px rgba(100,68,38,.22), inset 0 1px 0 rgba(255,255,255,.5);
}

/* Brand */
.login-brand{ text-align:center; margin-bottom:22px; }
.brand-icon{
    width:56px; height:56px; line-height:56px; text-align:center;
    font-size:26px; background:#fff7e6; border-radius:14px;
    margin:0 auto 12px; box-shadow: inset 0 1px 0 #fff, 0 6px 16px rgba(0,0,0,.06);
}
.login-brand h2{ margin:0 0 6px; color:var(--brand); font-size:28px; font-weight:800; }
.login-brand p{ margin:0; color:var(--muted); font-size:14.5px; }

/* Form */
.login-form{ margin-top:10px; }
.form-group{ margin-bottom:18px; }
.input-icon{ position:relative; }
.input-icon .icon{
    position:absolute; left:12px; top:50%; transform:translateY(-50%);
    color:#9a7a5c; font-size:14px;
}
.form-control{
    width:100%; padding:14px 14px 14px 38px; border-radius:12px;
    border:2px solid var(--accent); background:rgba(255,255,255,.9);
    color:var(--brand); font-size:15.5px;
    transition: border-color .2s ease, box-shadow .2s ease, background .2s ease;
}
.form-control::placeholder{ color:transparent; }
.form-control:focus{
    outline:0; border-color:var(--brand); background:#fff;
    box-shadow:0 0 0 6px var(--focus), inset 0 1px 0 rgba(255,255,255,.6);
}

/* Floating labels */
.floating{ position:relative; }
.floating .form-label{
    position:absolute; left:38px; top:12px; color:#a08060; font-size:14px;
    padding:0 6px; background:transparent; pointer-events:none;
    transition: transform .18s ease, color .18s ease, top .18s ease, background .18s ease;
}
.floating .form-control:focus + .form-label,
.floating .form-control:not(:placeholder-shown) + .form-label{ color:var(--brand); }
.floating .input-icon + .form-label{ position:absolute; }
.floating .input-icon .form-control:focus ~ .form-label,
.floating .input-icon .form-control:not(:placeholder-shown) ~ .form-label{
    transform: translateY(-22px) scale(.90);
    top:0;
    background: linear-gradient(180deg, transparent 40%, rgba(255,255,255,.92) 41% 100%);
    padding:0 6px; border-radius:6px;
}

/* Validation */
.text-danger{ color:#d9534f; font-size:13px; margin-top:6px; display:block; }

/* Actions */
.form-actions{ margin-top:8px; }
.login-btn{
    width:100%; padding:14px 16px; border:none; border-radius:12px;
    background:linear-gradient(135deg, var(--brand), var(--brand-2));
    color:#fff; font-weight:700; font-size:16px; letter-spacing:.2px;
    cursor:pointer;
    box-shadow:0 10px 24px rgba(100,68,38,.28);
    transition: transform .15s ease, box-shadow .2s ease, filter .2s ease;
}
.login-btn:hover{ transform: translateY(-1px); filter: brightness(1.02); }
.login-btn:active{ transform: translateY(0); box-shadow: 0 6px 14px rgba(100,68,38,.2); }

/* Footer */
.login-footer{ margin-top:18px; text-align:center; }
.message{ min-height:20px; color:#d9534f; font-size:14px; margin:6px 0 6px; }
.signup-prompt{ color:var(--text); font-size:14.5px; }
.signup-link{
    color:var(--brand); font-weight:700; text-decoration:none; margin-left:4px;
    border-bottom:1px dashed transparent; transition: color .2s ease, border-color .2s ease;
}
.signup-link:hover{ color:var(--brand-2); border-bottom-color:var(--brand-2); }

/* Reduce motion (escape @@ in Razor if used) */
@@media (prefers-reduced-motion: reduce){
    .login-card, .login-btn, .form-control, .login-card:hover, .form-label{
        transition:none !important;
    }
}*/

/* Responsive */
@@media (max-width:480px){
    .login-card{ width:100%; max-width: 420px; padding:26px 22px; }
    .login-brand h2{ font-size:24px; }
}
</style>
