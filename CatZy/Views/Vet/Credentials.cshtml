@{
    ViewBag.Title = "Doctor Credentials Submission Form";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Comic Sans MS', cursive;
            background-color: #ffd89e;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #5b3c1d;
            color: #fff3d4;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 20px;
        }

            .header .logo {
                font-weight: bold;
                font-size: 22px;
            }

            .header .title {
                font-size: 18px;
            }

            .header .back-btn {
                background: #fff3d4;
                color: #5b3c1d;
                border: none;
                border-radius: 20px;
                padding: 5px 15px;
                cursor: pointer;
            }

        .form-container {
            max-width: 700px;
            margin: 30px auto;
            background: #ffd089;
            padding: 30px;
            border-radius: 12px;
        }

        h2 {
            text-align: center;
            color: #8b4b2d;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .form-group label {
                flex: 1;
                font-weight: bold;
                color: #5b3c1d;
            }

            .form-group input,
            .form-group select {
                flex: 2;
                padding: 10px;
                border-radius: 6px;
                border: none;
                background: #fff3d4;
            }

                .form-group input[type="file"] {
                    padding: 5px;
                }

        .submit-btn {
            display: block;
            margin: 25px auto 0;
            padding: 12px 25px;
            background: #d5975d;
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }

            .submit-btn:hover {
                background: #b57d47;
            }
    </style>
</head>
<body>

    <div class="header">
        <div class="logo">Catzy</div>
        <div class="title">Credentials Form</div>
        <button class="back-btn" onclick="window.location.href='/Account/Login'">Logout</button>
    </div>

    <div class="form-container">
        @if (TempData["Message"] != null)
        {
            <p style="color:red; text-align:center; font-weight:bold;">@TempData["Message"]</p>
        }
        <h2>Doctor Credentials Submission Form</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Your Name</label>
                <input type="text" name="Name" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" required />
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="tel" name="Phone" required />
            </div>
            <div class="form-group">
                <label>Hospital/Clinic Name</label>
                <input type="text" name="HospitalName" placeholder="Enter your hospital/clinic" required />
            </div>
            <div class="form-group">
                <label>Specialization</label>
                <select name="Specialization" required>
                    <option value="">Select Specialization</option>
                    <option>Cardiologist</option>
                    <option>Dermatologist</option>
                    <option>Pediatrician</option>
                    <option>General Physician</option>
                </select>
            </div>
            <div class="form-group">
                <label>Consultation Hours</label>
                <select name="ConsultationHours" required>
                    <option value="">Select Time</option>
                    <option>Morning</option>
                    <option>Evening</option>
                </select>
            </div>
            <div class="form-group">
                <label>Years Of Experience</label>
                <input type="number" name="Experience" min="0" />
            </div>
            <div class="form-group">
                <label>Certificates and License</label>
                <input type="file" name="Certificates" />
            </div>
            <div class="form-group">
                <label>Profile Picture Upload</label>
                <input type="file" name="ProfilePic" />
            </div>

            <button type="submit" class="submit-btn">Submit Form</button>
        </form>
    </div>
</body>
</html>
