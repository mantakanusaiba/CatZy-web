@{
    ViewData["Title"] = "Adopt a Cat";
}

<div class="adoption-page">
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">Catzy</div>
        <ul class="nav-links">
            <li><a href="@Url.Action("Index", "User")">Home</a></li>
            <li><a href="#">Pet Shop</a></li>
            <li><a href="@Url.Action("Adoption", "User")" class="active">Adoption</a></li>
            <li><a href="#">Vet Appointment</a></li>
           <li><a href="@Url.Action("PetDiary","User")">Pet Diary</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="/Account/Logout">Logout</a></li>
        </ul>
    </nav>

    <div class="adoption-container">
        <div class="filter-box">
            <h3>Filter by</h3>
            @using (Html.BeginForm("Adoption", "User", FormMethod.Get))
            {
                <label>Age</label>
                @Html.DropDownList("age", new SelectList(new[] { "All", "6 months", "1 year", "2 years", "3 years" }, ViewBag.SelectedAge))

                <label>Gender</label>
                @Html.DropDownList("gender", new SelectList(new[] { "All", "Male", "Female" }, ViewBag.SelectedGender))

                <label>Color</label>
                @Html.DropDownList("color", new SelectList(new[] { "All", "Black", "Brown", "White", "Gray" }, ViewBag.SelectedColor))

                <label>Breed</label>
                @Html.DropDownList("breed", new SelectList(new[] { "All", "Biman", "Persian", "Siamese", "British Shorthair" }, ViewBag.SelectedBreed))

                <br /><br />
                <button type="submit" class="btn">Apply Filter</button>
            }
        </div>

        <div class="cats-box">
            <h2>Available Cats</h2>
            <p>Showing all available cats for adoption</p>

            <div class="cat-grid">
                @foreach (var cat in Model)
                {
                    <div class="cat-card">
                        <img src="@Url.Content(cat.ImageUrl)" alt="@cat.Name" />
                        <h4>@cat.Name</h4>
                        <a href="@Url.Action("CatDetails", "User", new { id = cat.Id })" class="details-btn">View Details</a>
                    </div>
                }
            </div>
        </div>
    </div>

<style>
    body {
        background-color: #f9e4c8;
        margin: 0;
        font-family: 'Comic Sans MS', cursive, sans-serif;
    }

    .navbar {
        background-color: #644426;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 40px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

        .navbar .logo {
            font-size: 28px;
            color: white;
            font-weight: bold;
        }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 25px;
    }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }
        .nav-links .active {
            text-decoration: underline;
        }

    .adoption-container {
        display: flex;
        margin-top: 80px;
        padding: 20px;
        background-color: #fff3e0;
    }

    .filter-box {
        width: 240px;
        background-color: #fff8e7;
        padding: 20px;
        border-radius: 15px;
        margin-right: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        gap: 15px;
        font-family: 'Comic Sans MS', cursive, sans-serif;
    }

        .filter-box h3 {
            margin-bottom: 10px;
            color: #6b4b2e;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            border-bottom: 2px solid #d8a55b;
            padding-bottom: 8px;
        }

        .filter-box label {
            font-weight: bold;
            color: #6b4b2e;
            margin-top: 8px;
            font-size: 14px;
        }

        .filter-box select {
            width: 100%;
            padding: 8px 10px;
            border-radius: 8px;
            border: 2px solid #d8a55b;
            background-color: #fffaf2;
            font-size: 14px;
            cursor: pointer;
            transition: border 0.3s ease, box-shadow 0.3s ease;
        }

            .filter-box select:hover,
            .filter-box select:focus {
                border-color: #b8853f;
                box-shadow: 0 0 6px rgba(184, 133, 63, 0.5);
                outline: none;
            }

        .filter-box .btn {
            background-color: #d8a55b;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s ease;
        }

            .filter-box .btn:hover {
                background-color: #b8853f;
            }


    .cats-list {
        flex: 1;
        background-color: #ffe4b5;
        padding: 20px;
        border-radius: 10px;
    }

        .cats-list h2 {
            margin: 0 0 10px;
            color: #6b4b2e;
        }

        .cats-list p {
            margin-bottom: 20px;
            color: #8a5e3c;
        }

    .cat-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .cat-card {
        background-color: #fff1c1;
        border-radius: 10px;
        padding: 10px;
        text-align: center;
    }

        .cat-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
        }

    .details-btn {
        background-color: #d8a55b;
        color: white;
        border: none;
        padding: 8px 15px;
        margin-top: 10px;
        border-radius: 20px;
        cursor: pointer;
        font-weight: bold;
    }

        .details-btn:hover {
            background-color: #b8853f;
        }
</style>
