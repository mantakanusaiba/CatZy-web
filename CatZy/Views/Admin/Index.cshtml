@{
    ViewData["Title"] = "Catzy - Admin Dashboard";
}

<!-- Navbar -->
<nav class="navbar">
    <div class="logo">CatZy</div>
    <ul class="nav-links">
        <li><a href="#">Product Management</a></li>
        <li><a href="#">Adoption Listing</a></li>
        <li><a href="/Admin/DoctorApproval">Doctor Approval</a></li>
        <li><a href="/Account/Logout">Logout</a></li>
    </ul>
</nav>

<!-- Admin Dashboard Main -->
<div class="admin-section">
    <h1>Welcome, Admin</h1>
    <p>Manage products, review adoption requests, and approve veterinary credentials.</p>

    <div class="admin-cards">
        <!-- Product Management -->
        <div class="admin-card">
            <img src="~/Content/image/product.png" alt="Product Management" />
            <h3>Product Management</h3>
            <p>Add, update, or remove items from the pet shop.</p>
            <a href="@Url.Action("Index", "Product")" class="btn">Manage Products →</a>
        </div>

        <!-- Rescuing Option -->
        <div class="admin-card">
            <img src="~/Content/image/rescue.png" alt="Rescue Option" />
            <h3>Rescuing Requests</h3>
            <p>View the list of cats that need to be rescued and take action.</p>
            <a href="#" class="btn">View Rescue List →</a>
        </div>

        <!-- Adoption Listing -->
        <div class="admin-card">
            <img src="~/Content/image/adoption.png" alt="Adoption Listing" />
            <h3>Adoption Listings</h3>
            <p>View and manage pet adoption applications.</p>
            <a href="#" class="btn">View Listings →</a>
        </div>

        <!-- Doctor Credential Approval -->
        <div class="admin-card">
            <img src="~/Content/image/doctor.png" alt="Doctor Approval" />
            <h3>Doctor Credential Approval</h3>
            <p>Approve or reject vet registrations after verification.</p>
            <a href="#" class="btn">Review Credentials →</a>
        </div>
    </div>
</div>

@Html.Partial("_Footer")

<style>
    /* General Layout */
    body {
        background-color: #ffd699;
        font-family: 'Comic Sans MS', cursive, sans-serif;
        margin: 0;
    }

    /* Navbar */
    .navbar {
        background-color: #644426;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 40px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

        .navbar .logo {
            font-size: 28px;
            color: white;
            font-weight: bold;
        }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 25px;
    }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

    /* Main Section */
    .admin-section {
        margin-top: 90px;
        padding: 50px;
        text-align: center;
    }

        .admin-section h1 {
            color: #6b4b2e;
            font-size: 36px;
        }

        .admin-section p {
            color: #8a5e3c;
            margin-bottom: 40px;
        }

    /* Cards */
    .admin-cards {
        margin-top: 60px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    .admin-card {
        background-color: #fff1c1;
        border-radius: 15px;
        padding: 20px;
        width: 45%;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        box-sizing: border-box;
        transition: transform 0.2s ease;
    }

        .admin-card:hover {
            transform: translateY(-5px);
        }

        .admin-card img {
            width: 80px;
            margin-bottom: 15px;
        }

        .admin-card h3 {
            color: #6b4b2e;
            margin-bottom: 10px;
        }

        .admin-card p {
            color: #8a5e3c;
            font-size: 14px;
            margin-bottom: 20px;
        }

    /* Buttons */
    .btn {
        background-color: #e5c185;
        padding: 8px 15px;
        border-radius: 20px;
        text-decoration: none;
        color: #6b4b2e;
        font-weight: bold;
        display: inline-block;
        transition: background-color 0.2s ease;
    }

        .btn:hover {
            background-color: #dab078;
        }
</style>
