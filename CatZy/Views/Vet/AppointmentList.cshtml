@model IEnumerable<Catzy.Models.Appointment>

@{
    ViewBag.Title = "Vet - Appointment List";
    Layout = null;
}

<style>
    body {
        font-family: 'Comic Sans MS', cursive;
        background-color: #ffd89e;
        margin: 0;
        padding: 0;
    }

    .header {
        background-color: #5b3c1d;
        color: #fff3d4;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .header .logo {
            font-size: 22px;
            font-weight: bold;
        }

        .header h2 {
            margin: 0;
            flex: 1;
            text-align: center;
            font-size: 20px;
        }

        .header .back-btn {
            background: #fff3d4;
            color: #5b3c1d;
            border: none;
            border-radius: 20px;
            padding: 6px 15px;
            cursor: pointer;
            text-decoration: none;
        }

            .header .back-btn:hover {
                background: #f5deb3;
            }

    .container {
        padding: 20px;
    }

    h3 {
        color: #5b3c1d;
        margin-bottom: 5px;
    }

    .subtitle {
        color: #7a4a2e;
        margin-bottom: 25px;
    }

    .card {
        background: #fff6cc;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

        .card p {
            color: #333;
            margin: 6px 0;
            font-size: 15px;
        }

        .card strong {
            color: #5b3c1d;
        }
</style>

<div class="header">
    <div class="logo">Catzy</div>
    <h2>Appointments</h2>
    <button class="back-btn" onclick="window.history.back()">Back</button>
</div>

<div class="container">
    <h3>My Booked Appointments</h3>
    <p class="subtitle">View all appointments booked with you</p>

    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="card">
                <p><strong>Owner Name:</strong> @item.OwnerName</p>
                <p><strong>Email:</strong> @item.Email</p>
                <p><strong>Phone:</strong> @item.Phone</p>
                <p><strong>Cat Name:</strong> @item.CatName</p>
                <p><strong>Age:</strong> @item.Age</p>
                <p><strong>Breed:</strong> @(string.IsNullOrEmpty(item.Breed) ? "N/A" : item.Breed)</p>
                <p><strong>Symptoms:</strong> @(string.IsNullOrEmpty(item.Symptoms) ? "N/A" : item.Symptoms)</p>
                <p><strong>Appointment Date:</strong> @item.Date.ToString("MMM d, yyyy")</p>
            </div>
        }
    }
    else
    {
        <p class="subtitle">No appointments found.</p>
    }
</div>
