@model List<Catzy.Models.DoctorCredential>

<div class="header">
    <div class="logo">Catzy</div>
    <h2>Available Veterinarians</h2>
    <a href="@Url.Action("Index", "User")" class="back-btn">Back</a>
</div>

<p class="subtitle">Select a vet and book your appointment</p>

<div class="vet-list">
    @foreach (var vet in Model)
    {
        <div class="card">
            <img src="@vet.ProfilePic" alt="@vet.Name" class="profile-pic" />
            <h3>Dr. @vet.Name</h3>
            <p><b>Specialization:</b> @vet.Specialization</p>
            <p><b>Experience:</b> @vet.Experience years</p>
            <p><b>Consultation Hours:</b> @vet.ConsultationHours</p>
            <p><b>Hospital/Clinic:</b> @vet.HospitalName</p>
            <p><b>Email:</b> @vet.Email | <b>Phone:</b> @vet.Phone</p>

            <div class="btn-wrapper">
                <a href="@Url.Action("BookAppointment", "User", new { doctorId = vet.Id })" class="btn">
                    Book Appointment
                </a>
            </div>
        </div>
    }
</div>

<style>
    body {
        font-family: 'Comic Sans MS', cursive;
        background-color: #ffd89e;
        margin: 0;
        padding: 0;
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #5b3c1d;
        color: #fff3d4;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 20px;
        z-index: 1000;
    }

    .header .logo {
        font-weight: bold;
        font-size: 22px;
    }

    .back-btn {
        background: #fff3d4;
        color: #5b3c1d;
        border: none;
        border-radius: 20px;
        padding: 5px 15px;
        cursor: pointer;
        text-decoration: none;
    }

    .subtitle {
        color: #5a3e36;
        padding: 15px 20px;
        margin: 0;
    }

    .vet-list {
        display: flex;
        flex-wrap: wrap;  
        gap: 20px;
        padding: 20px;
        margin-top: 80px;
        justify-content: center; 
    }

    .card {
        background-color: #FFF8DC;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s ease-in-out;
        flex: 0 1 calc(33.333% - 20px); /* 3 cards per row with gap */
        box-sizing: border-box;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .profile-pic {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #D2691E;
        margin-bottom: 10px;
    }

    .card h3 {
        color: #3B2F2F;
        margin: 0 0 8px 0;
    }

    .card p {
        margin: 4px 0;
        font-size: 14px;
        color: #4a3b32;
    }

    .btn-wrapper {
        display: flex;
        justify-content: center;
    }

    .btn {
        display: inline-block;
        margin-top: 10px;
        padding: 6px 12px;
        background: #d5975d;
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: 13px;
        transition: background 0.3s;
    }

  
    }
</style>
